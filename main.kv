#:kivy 1.10.0

<Ui>:
    # id for display
    inputs: Input
    
    BoxLayout:
        size_hint: None,None
        height: 100
        width: 300
    
        TextInput:
            id: Input
            text: ''     # the main display
            font_size: '20sp'  # font size
            input_filter: "int"
    GridLayout:
        cols: 3
    
        Button:
            text: '1'
            on_press: root.one_pressed()

        Button:
            text: '2'
            on_press: root.two_pressed()
        
        Button:
            text: '3'
            on_press: root.three_pressed()
        
        Button:
            text: '4'
            on_press: root.four_pressed()
        
        Button:
            text: '5'
            on_press: root.five_pressed()
        
        Button:
            text: '6'
            on_press: root.six_pressed()
        
        Button:
            text: '7'
            on_press: root.seven_pressed()
        
        Button:
            text: '8'
            on_press: root.eight_pressed()
        
        Button:
            text: '9'
            on_press: root.nine_pressed()
        
        Button:
            text: '0'
            on_press: root.zero_pressed()
        
        Button: 
            text: '+'
            on_press: root.add_pressed()
    
        Button:
            text: '-'
            on_press: root.subtract_pressed()
         
        Button:
            text: '*'
            on_press: root.multiply_pressed()
        
        Button:
            text: '/'
            on_press: root.division_pressed()
        
        Button:
            text: '%'
            on_press: root.modulus_pressed()
        
        Button: 
            text: '='
            on_press: root.equal_to_pressed()
        
        Button:
            text: 'AC'
            on_press: root.delete_pressed()
        
        Button:
            text: '.'
            on_press: root.dot_pressed()
         
     

        







